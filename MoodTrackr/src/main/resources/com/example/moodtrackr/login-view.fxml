<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.moodtrackr.controllers.LoginController">
   <left>
      <AnchorPane prefHeight="400.0" prefWidth="230.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER">
         <children>
            <Line endX="100.0" layoutX="114.0" layoutY="162.0" startX="-100.0" stroke="WHITE" strokeWidth="2.0">
               <effect>
                  <DropShadow />
               </effect>
            </Line>
            <Label alignment="CENTER" layoutX="1.0" layoutY="123.0" prefHeight="38.0" prefWidth="227.0" text="MoodTracker" textFill="WHITE">
               <font>
                  <Font name="Verdana Bold" size="24.0" />
               </font></Label>
            <Label alignment="CENTER" layoutX="1.0" layoutY="163.0" prefHeight="38.0" prefWidth="227.0" text="Web Application" textFill="WHITE">
               <font>
                  <Font name="Apple Braille Outline 6 Dot" size="18.0" />
               </font>
            </Label>
         </children></AnchorPane>
   </left>
   <right>
      <AnchorPane prefHeight="400.0" prefWidth="290.0">
       <children>
           <Label alignment="CENTER" layoutY="58.0" prefHeight="17.0" prefWidth="332.0" text="Secure Login">
               <effect>
                  <InnerShadow />
               </effect>
               <font>
                  <Font name="Apple Braille" size="24.0" />
               </font>
           </Label>
           <Label fx:id="loginMessage" alignment="CENTER" layoutX="1.0" layoutY="284.0" prefHeight="17.0" prefWidth="331.0" textFill="RED" />
           <Button layoutX="166.0" layoutY="320.0" onAction="#onRegisterButtonClick" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Register" textFill="#0f07fc" underline="true">
               <font>
                   <Font name="Arial Rounded MT Bold" size="13.0" />
               </font>
           </Button>
           <Label layoutX="67.0" layoutY="324.0" text="Need an account?" />
           <Button fx:id="loginButton" layoutX="116.0" layoutY="235.0" onAction="#onLoginButtonClick" prefHeight="26.0" prefWidth="100.0" style="-fx-background-color: Black;" text="Login" textFill="WHITE" />
            <HBox alignment="CENTER" layoutY="114.0" prefHeight="83.0" prefWidth="332.0" spacing="10.0">
               <children>
                 <GridPane hgap="5.0" vgap="5.0">
                     <columnConstraints>
                         <ColumnConstraints minWidth="70" />
                         <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     <Label alignment="CENTER" text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                     <Label alignment="CENTER" text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                     <Label alignment="CENTER" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                     <TextField fx:id="firstNameTextField" maxWidth="Infinity" promptText="Fisrst Name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                     <TextField fx:id="lastNameTextField" promptText="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     <TextField fx:id="passwordTextField" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     <rowConstraints>
                         <RowConstraints />
                         <RowConstraints />
                         <RowConstraints />
                     </rowConstraints>
                 </GridPane>
               </children>
            </HBox>
       </children></AnchorPane>
   </right>
</BorderPane>
